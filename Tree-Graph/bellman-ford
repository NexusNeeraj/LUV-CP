vector<int>dist(n+1, 1e8);
    dist[src] = 0;
    //T.C. -> V X E
    for(int i = 1; i <= n-1; i++){
        for(auto &edge:edges){
            int u = edge[0];
            int v = edge[1];
            int wt = edge[2];
            if(dist[u] != 1e8 && dist[u] + wt < dist[v]){
                dist[v] = dist[u] + wt;
            }
        }
    }

    // // Nth relaxation to check negative cycle
    for(auto &edge:edges){
        int u = edge[0];
        int v = edge[1];
        int wt = edge[2];
        if(dist[u] != 1e8 && dist[u] + wt < dist[v]){
            return {-1};
        }
    }

    return dist;
